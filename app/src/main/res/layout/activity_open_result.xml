<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30px">

            <TextView
                android:id="@+id/tvOpenSerial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="201705期开奖结果"
                android:textColor="@color/main_black_color_333333"
                android:textSize="44px" />


            <TextView
                android:id="@+id/tvOpenTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="09月07日（周四）开奖"
                android:textColor="@color/main_black_color_333333"
                android:textSize="44px" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvOpenResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:focusable="false" />

        <View
            style="@style/divider_horizontal"
            android:layout_marginTop="40px" />

        <TextView
            android:id="@+id/tvHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:drawableRight="@drawable/ic_narrow_right"
            android:gravity="center"
            android:padding="20px"
            android:text="查看历史开奖结果"
            android:textColor="@color/line_color_3954e4"
            android:textSize="44px" />

        <View style="@style/divider_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:padding="20px"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAvgAnalysis"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_margin="8px"
                android:layout_weight="1"
                android:background="@drawable/corner16_red"
                android:gravity="center"
                android:text="均值分析"
                android:textColor="@color/white"
                android:textSize="46px" />

            <TextView
                android:id="@+id/tvSumAnalysis"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_margin="8px"
                android:layout_weight="1"
                android:background="@drawable/corner16_red"
                android:gravity="center"
                android:text="和值分析"
                android:textColor="@color/white"
                android:textSize="46px" />

            <TextView
                android:id="@+id/tvNumRate"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_margin="8px"
                android:layout_weight="1"
                android:background="@drawable/corner16_red"
                android:gravity="center"
                android:text="号码频率"
                android:textColor="@color/white"
                android:textSize="46px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvRandomNum"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_margin="8px"
                android:layout_weight="1"
                android:background="@drawable/corner16_red"
                android:gravity="center"
                android:text="随机摇号"
                android:textColor="@color/white"
                android:textSize="46px" />

            <TextView
                android:id="@+id/tvNumberForecast"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_margin="8px"
                android:layout_weight="1"
                android:background="@drawable/corner16_red"
                android:gravity="center"
                android:text="号码预测"
                android:textColor="@color/white"
                android:textSize="46px" />

            <TextView
                android:id="@+id/tvAvgSimulate"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_margin="8px"
                android:layout_weight="1"
                android:background="@drawable/corner16_red"
                android:gravity="center"
                android:text="均值演算"
                android:textColor="@color/white"
                android:textSize="46px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvParityTrend"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_margin="8px"
                android:layout_weight="1"
                android:background="@drawable/corner16_red"
                android:gravity="center"
                android:text="奇偶趋势"
                android:textColor="@color/white"
                android:textSize="46px" />

            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_margin="8px"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="46px" />

            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_margin="8px"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="46px" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>